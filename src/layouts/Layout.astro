---
import '../styles/global.css';
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio of a Workflow Automation Specialist" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-[#0f172a] text-slate-200 selection:bg-cyan-500 selection:text-white">
		<slot />
		<footer class="py-10 text-center text-sm text-slate-500 border-t border-slate-800/50 mt-20">
			<div class="flex justify-center gap-6 mb-4">
				<a href="/imprint/" class="hover:text-cyan-400 transition">Imprint</a>
				<a href="/privacy/" class="hover:text-cyan-400 transition">Privacy Policy</a>
			</div>
			<p>&copy; {new Date().getFullYear()} Deczer Solution. All rights reserved.</p>
		</footer>
	</body>
</html>

<style is:global>
	html { scroll-behavior: smooth; }
	body { -webkit-font-smoothing: antialiased; }
</style>